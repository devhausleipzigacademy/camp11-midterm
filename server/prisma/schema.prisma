generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ticket {
  id      Int      @id @default(autoincrement())
  movieId Int
  title   String
  date    DateTime
  seat    String[]
  price   Decimal
}

model Favorite {
  id      String @id @default(uuid())
  movieId String @unique
}
